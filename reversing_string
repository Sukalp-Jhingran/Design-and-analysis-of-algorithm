#include <stdio.h>
#include <string.h>

int main() {
  char str[40];
  int i, len;

  printf("Enter a string: ");
  scanf("%s", str);

  len = strlen(str);
  for (i = 0; i < len / 2; i++) {
    char temp = str[i];
    str[i] = str[len - i - 1];
    str[len - i - 1] = temp;
  }

  printf("The reversed string is: %s\n", str);

  return 0;
}
