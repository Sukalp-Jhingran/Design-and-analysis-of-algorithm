#include <stdio.h>

int main()
{
    int i, rows = 5;
    for (int i = 0; i <= rows - 1; i++)
    {  
        for (int j = 0; j <= i; j++)
        {
            printf("*" " ");
        }

    printf(" \n");
    }

    for (int i = rows - 1; i >= 0; i--)
    { 
        for (int j = 0; j <= i - 1; j++) {
            printf("*" " ");
        }
    printf("\n"); //New line
    }
}
